<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/zerotoeight"
        android:layout_width="370dp"
        android:layout_height="360dp"
        android:adjustViewBounds="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/GridLayout1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/zerotoeight"
        tools:visibility="invisible" />

    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".GridXMLActivity">

        <ImageView
            android:id="@+id/imageView0"
            android:layout_width="104dp"
            android:layout_height="105dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:onClick="popClick"
            android:tag="0" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="108dp"
            android:layout_height="106dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:onClick="popClick"
            android:tag="1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="104dp"
            android:layout_height="105dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:onClick="popClick"
            android:tag="2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="104dp"
            android:layout_height="105dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:onClick="popClick"
            android:tag="3" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="108dp"
            android:layout_height="106dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:onClick="popClick"
            android:tag="4" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="104dp"
            android:layout_height="105dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:onClick="popClick"
            android:tag="5" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="104dp"
            android:layout_height="105dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:onClick="popClick"
            android:tag="6" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="108dp"
            android:layout_height="106dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:onClick="popClick"
            android:tag="7" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="104dp"
            android:layout_height="105dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:onClick="popClick"
            android:tag="8" />
    </GridLayout>

    <Button
        android:id="@+id/playAgainButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="81dp"
        android:background="@drawable/button"
        android:onClick="playAgain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GridLayout1" />

    <TextView
        android:id="@+id/winTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="119dp"
        android:layout_marginBottom="64dp"
        android:text="Circle's moves..."
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/GridLayout1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="GridLayout1" />

    <ImageView
        android:id="@+id/oneToSeven"
        android:layout_width="13dp"
        android:layout_height="370dp"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginEnd="-8dp"
        android:layout_marginRight="-8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/GridLayout1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/onetoseven" />

    <ImageView
        android:id="@+id/zerotosix"
        android:layout_width="14dp"
        android:layout_height="365dp"
        android:layout_marginEnd="260dp"
        android:layout_marginRight="260dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/zerotosix" />

    <ImageView
        android:id="@+id/twotoeight"
        android:layout_width="28dp"
        android:layout_height="371dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/oneToSeven"
        app:layout_constraintTop_toTopOf="@+id/group"
        app:layout_constraintVertical_bias="0.501"
        app:srcCompat="@drawable/onetoseven" />

    <ImageView
        android:id="@+id/twotosix"
        android:layout_width="355dp"
        android:layout_height="374dp"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/threetosix" />

    <ImageView
        android:id="@+id/zerototwo"
        android:layout_width="373dp"
        android:layout_height="20dp"
        android:layout_marginBottom="50dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/zerotoeight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/zerototwo" />

    <ImageView
        android:id="@+id/siztoeight"
        android:layout_width="373dp"
        android:layout_height="10dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zerototwo"
        app:srcCompat="@drawable/sixtoeight" />

    <ImageView
        android:id="@+id/threetofive"
        android:layout_width="366dp"
        android:layout_height="12dp"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/threetofive" />

</androidx.constraintlayout.widget.ConstraintLayout>